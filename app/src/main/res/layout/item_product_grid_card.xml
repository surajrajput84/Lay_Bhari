<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="16dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:contentDescription="Product Image" />
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:src="@android:drawable/btn_star"
            app:tint="#D3D3D3"
            android:contentDescription="Add to Favorites" />
    </FrameLayout>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:text="Solid Colour" /> <TextView
    android:id="@+id/product_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rs. XXXX"
    android:textSize="14sp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"
    tools:text="Rs. 1000" /> <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp">
    <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107" android:contentDescription="Star Filled"/>
    <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107" android:contentDescription="Star Filled"/>
    <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFC107" android:contentDescription="Star Filled"/>
    <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/btn_star_big_off" app:tint="#CCCCCC" android:contentDescription="Star Empty"/>
    <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/btn_star_big_off" app:tint="#CCCCCC" android:contentDescription="Star Empty"/>
</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>